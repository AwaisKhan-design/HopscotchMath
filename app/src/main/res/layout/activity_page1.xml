<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2_1x"
    tools:context=".page1">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/layout1">
            <TextView
                android:id="@+id/decrement"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:fontFamily="@font/morning_rainbow"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="70dp"
                android:visibility="invisible"></TextView>

            <TextView
                android:id="@+id/set"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/decrement"
                android:fontFamily="@font/morning_rainbow"
                android:gravity="center"
                android:text="Set: "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32dp"></TextView>

            <TextView
                android:id="@+id/no."
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/set"
                android:fontFamily="@font/morning_rainbow"
                android:text="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32dp"></TextView>

            <TextView
                android:id="@+id/add_sign"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/no."
                android:fontFamily="@font/morning_rainbow"
                android:text="+"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="70dp"></TextView>

            <TextView
                android:id="@+id/decrement_level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/add_sign"
                android:layout_marginStart="70dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/morning_rainbow"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="70dp"
                android:visibility="invisible"></TextView>

            <TextView
                android:id="@+id/note"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/set"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/decrement_level"
                android:fontFamily="@font/morning_rainbow"
                android:gravity="center"
                android:text="Difficulty:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32dp"></TextView>

            <TextView
                android:id="@+id/note1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/note"
                android:layout_marginStart="130dp"
                android:fontFamily="@font/morning_rainbow"
                android:gravity="center"
                android:text="Novice"
                android:textColor="@color/white"
                android:textSize="28dp"></TextView>

            <TextView
                android:id="@+id/increment_level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/add_sign"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/note"
                android:fontFamily="@font/morning_rainbow"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="70dp"></TextView>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/note2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/morning_rainbow"
            android:text="High Score 0/10 ("
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/note2"
            android:fontFamily="@font/morning_rainbow"
            android:text="120"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/second"
            android:fontFamily="@font/morning_rainbow"
            android:text=" seconds)"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/layout1">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next_btn"
            android:fontFamily="@font/morning_rainbow"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32dp"></Button>

        <TextView
            android:id="@+id/websiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/morning_rainbow"
            android:layout_marginStart="80dp"
            android:text="@string/websiteText"
            android:textColor="@color/white"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/weblink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/morning_rainbow"
            android:text="@string/hyperlink"
            android:textColor="#006AFF"
            android:textSize="16dp"></TextView>

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/directions_160_2x"></Button>
    </RelativeLayout>
    </RelativeLayout>