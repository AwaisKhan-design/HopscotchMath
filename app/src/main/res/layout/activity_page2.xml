<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/background_2_1x"
    android:padding="5dp"
    tools:context=".page2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/back_box_160_2x">
        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/morning_rainbow"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="Welcome to Hopscotch:\nSimplifying Fractions:"
            android:textColor="@color/white"
            android:textSize="24dp"></TextView>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:fontFamily="@font/morning_rainbow"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Select a sets contain harder fractions."
            android:textColor="@color/white"
            android:textSize="22dp">
        </TextView>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/morning_rainbow"
            android:text="Higher sets contain harder fractions."
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginRight="110dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Select a difficulty level."
            android:textColor="@color/white"
            android:fontFamily="@font/morning_rainbow"
            android:textSize="22dp">
        </TextView>
        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/morning_rainbow"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Higher difficulties mean less time."
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="Good luck and have Fun!"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="26dp"
            android:fontFamily="@font/morning_rainbow">
        </TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">
    </TextView>
</RelativeLayout>